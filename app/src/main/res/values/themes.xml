<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.VNStock" parent="Theme.MaterialComponents.Light.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/purple_500</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    <item name="fontFamily">@font/svn_gilroy_medium</item>
    <item name="android:fontFamily">@font/svn_gilroy_medium</item>
    <!-- Customize your theme here. -->
  </style>
  <style name="Theme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="fontFamily">@font/svn_gilroy_medium</item>
    <item name="android:fontFamily">@font/svn_gilroy_medium</item>
  </style>
  <style name="TabItemTextAppearance" parent="TextAppearance.Design.Tab">
    <item name="fontFamily">@font/svn_gilroy_semi_bold</item>
  </style>
</resources>